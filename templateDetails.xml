<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>crzt_template</name>
	<creationDate>Mar 2013</creationDate>
	<author>CrazyTemplate</author>
	<authorEmail>info@crazytemplate.com</authorEmail>
	<authorUrl>http://crazytemplate.com</authorUrl>
	<copyright>Copyright (C) 2013 CrazyTemplate. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.5.0</version>
	<description>
		Startup development template from crzt.net
	</description>

	<files>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
	</files>

	<positions>
		<position>debug</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_crzt_template.ini</language>
	</languages>


	<config>
		<fields name="params">
			<fieldset name="LAYOUT">
				<field name="layout_top" label="TPL_CRZT_LAYOUT_TOP" type="text" default="1,1,1,1,1,1" />
				<field name="layout_header" label="TPL_CRZT_LAYOUT_HEADER" type="text" default="1,1,1,1,1,1" />
				<field name="layout_showcase" label="TPL_CRZT_LAYOUT_SHOWCASE" type="text" default="1,1,1,1,1,1" />
				<field name="layout_featured" label="TPL_CRZT_LAYOUT_FEATURED" type="text" default="1,1,1,1,1,1" />
				<field name="layout_utility" label="TPL_CRZT_LAYOUT_UTILITY" type="text" default="1,1,1,1,1,1" />
				<field name="layout_breadcrumb" label="TPL_CRZT_LAYOUT_BREADCRUMB" type="text" default="6" />
				
				<field name="layout_sidebar" label="TPL_CRZT_LAYOUT_SIDEBAR" type="text" default="1,1,1,1" />
				
				<field name="layout_mainbottom" label="TPL_CRZT_LAYOUT_MAINBOTTOM" type="text" default="1,1,1,1,1,1" />
				<field name="layout_extension" label="TPL_CRZT_LAYOUT_EXTENSION" type="text" default="1,1,1,1,1,1" />
				<field name="layout_bottom" label="TPL_CRZT_LAYOUT_BOTTOM" type="text" default="1,1,1,1,1,1" />
				<field name="layout_footer" label="TPL_CRZT_LAYOUT_FOOTER" type="text" default="1,1,1,1,1,1" />
				<field name="layout_copyright" label="TPL_CRZT_LAYOUT_COPYRIGHT" type="text" default="1,1,1,1,1,1" />
			</fieldset>
			<fieldset name="HEAD">
				<field name="google_analytics" type="text" default="" 
					label="TPL_CRZT_GOOGLE_ANALYTICS"
					description="TPL_CRZT_GOOGLE_ANALYTICS_DESC" />
				<field name="google_webmastertools" type="text" default=""
					label="TPL_CRZT_GOOGLE_WEBMASTERTOOLS"
					description="TPL_CRZT_GOOGLE_WEBMASTERTOOLS_DESC"
					/>
				
			</fieldset>
			<fieldset name="CACHE">
				<field name="css_cache" type="list" default="center"
					label="TPL_CRZT_CSS_CACHE"
					filter="word"
				>
					<option value="no">No</option>
					<option value="yes">Yes</option>
				</field>
				<field name="js_cache" type="list" default="center"
					label="TPL_CRZT_JS_CACHE"
					filter="word"
				>
					<option value="no">No</option>
					<option value="yes">Yes</option>
				</field>
				
			</fieldset>
		</fields>
	</config>
</extension>
