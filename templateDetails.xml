<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>crzt_template</name>
	<creationDate>Mar 2013</creationDate>
	<author>CrazyTemplate</author>
	<authorEmail>info@crazytemplate.com</authorEmail>
	<authorUrl>http://crazytemplate.com</authorUrl>
	<copyright>Copyright (C) 2013 CrazyTemplate. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.5.0</version>
	<description>
		Startup development template from crzt.net
	</description>

	<files>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
	</files>

	<positions>
		<position>top-a</position>
		<position>top-b</position>
		<position>top-c</position>
		<position>top-d</position>
		<position>top-e</position>
		<position>top-f</position>
		<position>header-a</position>
		<position>header-b</position>
		<position>header-c</position>
		<position>header-d</position>
		<position>header-e</position>
		<position>header-f</position>
		<position>showcase-a</position>
		<position>showcase-b</position>
		<position>showcase-c</position>
		<position>showcase-d</position>
		<position>showcase-e</position>
		<position>showcase-f</position>
		<position>featured-a</position>
		<position>featured-b</position>
		<position>featured-c</position>
		<position>featured-d</position>
		<position>featured-e</position>
		<position>featured-f</position>
		<position>utility-a</position>
		<position>utility-b</position>
		<position>utility-c</position>
		<position>utility-d</position>
		<position>utility-e</position>
		<position>utility-f</position>
		<position>breadcrumb-a</position>
		<position>breadcrumb-b</position>
		<position>breadcrumb-c</position>
		<position>breadcrumb-d</position>
		<position>breadcrumb-e</position>
		<position>breadcrumb-f</position>
		<position>sidebar-a</position>
		<position>sidebar-b</position>
		<position>sidebar-c</position>
		<position>sidebar-d</position>
		<position>maintop-a</position>
		<position>maintop-b</position>
		<position>maintop-c</position>
		<position>maintop-d</position>
		<position>maintop-e</position>
		<position>maintop-f</position>
		<position>mainbottom-a</position>
		<position>mainbottom-b</position>
		<position>mainbottom-c</position>
		<position>mainbottom-d</position>
		<position>mainbottom-e</position>
		<position>mainbottom-f</position>
		<position>extension-a</position>
		<position>extension-b</position>
		<position>extension-c</position>
		<position>extension-d</position>
		<position>extension-e</position>
		<position>extension-f</position>
		<position>bottom-a</position>
		<position>bottom-b</position>
		<position>bottom-c</position>
		<position>bottom-d</position>
		<position>bottom-e</position>
		<position>bottom-f</position>
		<position>footer-a</position>
		<position>footer-b</position>
		<position>footer-c</position>
		<position>footer-d</position>
		<position>footer-e</position>
		<position>footer-f</position>
		<position>copyright-a</position>
		<position>copyright-b</position>
		<position>copyright-c</position>
		<position>copyright-d</position>
		<position>copyright-e</position>
		<position>copyright-f</position>
		<position>cookie-note</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_crzt_template.ini</language>
	</languages>


	<config>
		<fields name="params">
			<fieldset name="LAYOUT">
				<field name="layout_top" label="TPL_CRZT_LAYOUT_TOP" type="text" default="1,1,1,1,1,1" />
				<field name="layout_header" label="TPL_CRZT_LAYOUT_HEADER" type="text" default="1,1,1,1,1,1" />
				<field name="layout_showcase" label="TPL_CRZT_LAYOUT_SHOWCASE" type="text" default="1,1,1,1,1,1" />
				<field name="layout_featured" label="TPL_CRZT_LAYOUT_FEATURED" type="text" default="1,1,1,1,1,1" />
				<field name="layout_utility" label="TPL_CRZT_LAYOUT_UTILITY" type="text" default="1,1,1,1,1,1" />
				<field name="layout_breadcrumb" label="TPL_CRZT_LAYOUT_BREADCRUMB" type="text" default="6" />
				
				<field name="layout_sidebar" label="TPL_CRZT_LAYOUT_SIDEBAR" type="text" default="1,1,1,1" />
				
				<field name="layout_mainbottom" label="TPL_CRZT_LAYOUT_MAINBOTTOM" type="text" default="1,1,1,1,1,1" />
				<field name="layout_extension" label="TPL_CRZT_LAYOUT_EXTENSION" type="text" default="1,1,1,1,1,1" />
				<field name="layout_bottom" label="TPL_CRZT_LAYOUT_BOTTOM" type="text" default="1,1,1,1,1,1" />
				<field name="layout_footer" label="TPL_CRZT_LAYOUT_FOOTER" type="text" default="1,1,1,1,1,1" />
				<field name="layout_copyright" label="TPL_CRZT_LAYOUT_COPYRIGHT" type="text" default="1,1,1,1,1,1" />
			</fieldset>
			<fieldset name="HEAD">
				<field name="google_analytics" type="text" default="" 
					label="TPL_CRZT_GOOGLE_ANALYTICS"
					description="TPL_CRZT_GOOGLE_ANALYTICS_DESC" />
				<field name="google_webmastertools" type="text" default=""
					label="TPL_CRZT_GOOGLE_WEBMASTERTOOLS"
					description="TPL_CRZT_GOOGLE_WEBMASTERTOOLS_DESC"
					/>
				
			</fieldset>
			<fieldset name="CACHE">
				<field name="css_cache" type="list" default="center"
					label="TPL_CRZT_CSS_CACHE"
					filter="word"
				>
					<option value="no">No</option>
					<option value="yes">Yes</option>
				</field>
				<field name="js_cache" type="list" default="center"
					label="TPL_CRZT_JS_CACHE"
					filter="word"
				>
					<option value="no">No</option>
					<option value="yes">Yes</option>
				</field>
				<field name="jscss_excluded" type="textarea" rows="3" cols="30" label="TPL_CRZT_LANG_EXCLUDEJSCSS" description="TPL_CRTZ_LANG_EXCLUDEJSCSS_DESC" />
                                <field name="css_custom" type="textarea" rows="6" cols="40" label="TPL_CRZT_LANG_CSS_CUSTOM" description="TPL_CRZT_LANG_CSS_CUSTOM_DESC" />
                                <field name="js_custom" type="textarea" rows="6" cols="40" label="TPL_CRZT_LANG_JS_CUSTOM" description="TPL_CRZT_LANG_JS_CUSTOM_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
